@model RegisterViewModel

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/css/authentication/register.css" />
<div class="container d-flex justify-content-center">
    <div class="register-form d-flex align-items-center flex-column">
        <h1>Register</h1>
        @if (Model != null)
        {
    <form asp-controller="Authentication" asp-action="Register" class="d-flex align-items-center flex-column">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name" value="@Model.Name" /><br />
        <input type="text" asp-for="Surname" class="form-control" placeholder="Surname" value="@Model.Surname" /><br />
        <input type="number" asp-for="Age" class="form-control" placeholder="Age" value="@Model.Age" /><br />
        <input type="text" asp-for="Skills" class="form-control" placeholder="Skills" value="@Model.Skills" /><br />
        <input type="text" asp-for="UserName" class="form-control" placeholder="Username" value="@Model.UserName" /><br />
        <input type="email" asp-for="Email" class="form-control" placeholder="Email" value="@Model.Email" /><br />
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" /><br />
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" /><br />
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
        }
        else
        {
    <form asp-controller="Authentication" asp-action="Register" class="d-flex align-items-center flex-column">
        <input type="text" asp-for="Name" class="form-control" placeholder="Name" /><br />
        <input type="text" asp-for="Surname" class="form-control" placeholder="Surname" /><br />
        <input type="number" asp-for="Age" class="form-control" placeholder="Age" /><br />
        <input type="text" asp-for="Skills" class="form-control" placeholder="Skills" /><br />
        <input type="text" asp-for="UserName" class="form-control" placeholder="Username" /><br />
        <input type="email" asp-for="Email" class="form-control" placeholder="Email" /><br />
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" /><br />
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" /><br />
        <div asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
        }
    </div>
</div>
<div id="error-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-modal="true" style="display: none;">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header d-flex justify-content-center">
                <h4 class="modal-title text-center" id="myModalLabel">Error</h4>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <span>@ViewBag.ErrorMessage</span>
            </div>

        </div>
    </div>
</div>
@if (ViewBag.ErrorMessage != null)
{
<script>$('#error-modal').modal('show');</script>

}
